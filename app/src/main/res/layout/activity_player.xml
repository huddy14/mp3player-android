<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#ffffff">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageViewCover"
            android:longClickable="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:background="#14dfce">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewTimeElapsed"
                android:textAlignment="center"
                android:gravity="bottom"
                android:layout_weight="5"
                android:text="aa"
                 />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:minHeight="30dp"
                android:maxHeight="30dp"
                android:layout_gravity="bottom"
                android:id="@+id/seekBar"
                android:layout_weight="1"
                android:indeterminate="false"
                 />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewTimeToEnd"
                android:layout_weight="5"
                android:textAlignment="center"
                android:text="aa"
                android:gravity="bottom" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewSongName"
            android:layout_gravity="center"
            android:focusableInTouchMode="false"
            android:textColorHighlight="#a69595"
            android:textColor="#000000"
            android:textColorHint="#8e4242"
            android:gravity="center"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO BACK"
                android:id="@+id/buttonBack"
                android:src="@drawable/tracklist"

                android:background="#ffffff" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="PREVIOUS"
                android:id="@+id/buttonPrev"
                android:src="@drawable/backward"
                android:layout_weight="1"
                android:background="#ad374544" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButtonPlayPause"
                android:layout_weight="1"
                android:src="@drawable/play"
                android:background="#ad374544" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="NEXT"
                android:id="@+id/buttonNext"
                android:src="@drawable/forward"
                android:layout_weight="1"
                android:background="#ad374544" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>